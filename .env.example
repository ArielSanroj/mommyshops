# MommyShops Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://postgres@localhost:5432/mommyshops_db"

# Tesseract OCR Path
TESSERACT_PATH="/opt/homebrew/bin/tesseract"

# API Keys (get these from respective services)
NVIDIA_API_KEY="your-nvidia-api-key-here"
APIFY_API_KEY="your-apify-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"
GOOGLE_VISION_API_KEY="your-google-vision-api-key-here"
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"
GOOGLE_REDIRECT_URI="https://web-production-f23a5.up.railway.app/auth/google/callback"

# Secret Key for sessions
SECRET_KEY="your-secret-key-here"

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH="firebase-service-account.json"
# OR use JSON credentials as environment variable:
# FIREBASE_CREDENTIALS='{"type":"service_account","project_id":"your-project-id",...}'
# OR use Google Application Default Credentials:
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"