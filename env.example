# MommyShops - Environment Variables Example
# Copy this file to .env and configure the values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Python format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://mommyshops:CHANGE_ME_STRONG_PASSWORD@localhost:5432/mommyshops
# Java format: jdbc:postgresql://host:port/dbname
# DATABASE_URL=jdbc:postgresql://localhost:5432/mommyshops
DB_USERNAME=mommyshops
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Python Backend Configuration
PYTHON_BACKEND_URL=http://localhost:8000
PYTHON_BACKEND_TIMEOUT=30000

# External API Keys
FDA_API_KEY=your_fda_api_key_here
EWG_API_KEY=your_ewg_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_VISION_MODEL=llava

# Analysis Configuration
ANALYSIS_CONFIDENCE_THRESHOLD=70
ANALYSIS_MAX_INGREDIENTS=50

# Logging Configuration
SHOW_SQL=false
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - REQUIRED IN PRODUCTION)
# =============================================================================
# Generate a strong secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_AT_LEAST_32_CHARACTERS_LONG_SECRET
JWT_EXPIRATION=3600
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Trusted Hosts (comma-separated)
TRUSTED_HOSTS=localhost,127.0.0.1

# File Upload Limits
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.webp

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# HTTPS Requirement (set to true in production)
REQUIRE_HTTPS=false

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true

