[MASTER]
# Pylint configuration for MommyShops

# Use multiple processes to speed up Pylint
jobs=4

# Pickle collected data for later comparisons
persistent=yes

# List of plugins
load-plugins=

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

# Ignore paths
ignore=.git,__pycache__,.venv,venv,env,build,dist

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0212,  # protected-access
    W0511,  # fixme
    C0330,  # bad-continuation (conflicts with black)
    C0326,  # bad-whitespace (conflicts with black)

[REPORTS]
# Report settings
output-format=text
reports=yes
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[BASIC]
# Naming conventions
good-names=i,j,k,ex,Run,_,id,db

# Regular expressions for naming
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$

[FORMAT]
# Maximum line length
max-line-length=100

# Maximum number of lines in a module
max-module-lines=1000

# Indent string
indent-string='    '

[DESIGN]
# Maximum complexity
max-complexity=15

# Maximum number of arguments
max-args=7

# Maximum number of attributes
max-attributes=12

# Maximum number of public methods
max-public-methods=25

[IMPORTS]
# Deprecated modules
deprecated-modules=optparse

[CLASSES]
# List of method names used to declare instance attributes
defining-attr-methods=__init__,__new__,setUp

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=Exception

