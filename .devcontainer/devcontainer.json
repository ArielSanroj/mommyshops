{
  "name": "Python 3 + Java 17",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "frontend.html"
      ]
    },
    "vscode": {
      "settings": {
        "java.home": "/usr/local/sdkman/candidates/java/current"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "redhat.java"
      ]
    }
  },
  "postCreateCommand": "[ -f packages.txt ] && sudo apt update && sudo xargs apt install -y <packages.txt; [ -f backend-python/requirements.txt ] && pip install -r backend-python/requirements.txt; echo 'âœ… Dev container ready'",
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
